<Page
    x:Class="Taq.Views.AqHistories"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Taq.Views"
    xmlns:chart="using:Syncfusion.UI.Xaml.Charts"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    NavigationCacheMode="Enabled">

    <Page.Resources>
        <local:AdornTextColor x:Key="atc"/>
    </Page.Resources>

    <ScrollViewer Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" HorizontalScrollMode="Enabled" HorizontalScrollBarVisibility="Auto">
        <chart:SfChart x:Name="sfChart" ManipulationMode="System" MinWidth="900" Margin="16, 10, 0, 0">
            <chart:SfChart.PrimaryAxis>
                <chart:CategoryAxis x:Name="pa" Header="時間" FontSize="20" ShowGridLines="False"/>
            </chart:SfChart.PrimaryAxis>

            <chart:SfChart.SecondaryAxis>
                <chart:NumericalAxis x:Name="sa" FontSize="20" ShowGridLines="False"/>
            </chart:SfChart.SecondaryAxis>

            <chart:ColumnSeries ItemsSource="{x:Bind aq24HrValColl, Mode=OneWay}" XBindingPath="Hour" YBindingPath="Val" Palette="Custom">
                <chart:ColumnSeries.AdornmentsInfo>
                    <chart:ChartAdornmentInfo LabelPosition="Inner" ShowLabel="True" FontSize="16">
                        <chart:ChartAdornmentInfo.LabelTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" Foreground="{Binding Converter={StaticResource atc}}"></TextBlock>
                            </DataTemplate>
                        </chart:ChartAdornmentInfo.LabelTemplate>
                    </chart:ChartAdornmentInfo>
                </chart:ColumnSeries.AdornmentsInfo>
                <chart:ColumnSeries.ColorModel>
                    <chart:ChartColorModel x:Name="ccm"/>
                </chart:ColumnSeries.ColorModel>
            </chart:ColumnSeries>
        </chart:SfChart>
    </ScrollViewer>
</Page>
