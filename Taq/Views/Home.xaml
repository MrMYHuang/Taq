<Page
    x:Class="Taq.Views.Home"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Taq.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:data="using:TaqShared.Models"
    mc:Ignorable="d"
    NavigationCacheMode="Enabled">
    <Page.Resources>
        <DataTemplate x:Key="SiteListHeaderTemplate">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <TextBlock Text="觀測站" HorizontalAlignment="Left" FontSize="16" Margin="5,0" Foreground="Red" MinWidth="5" TextAlignment="Left" />
                <TextBlock Text="PM 2.5 (μg/m^3)" HorizontalAlignment="Left" FontSize="16" Margin="5,0" />
            </StackPanel>
        </DataTemplate>
        <DataTemplate x:Key="SiteListDataTemplate" x:DataType="data:Site">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <TextBlock Text="{x:Bind siteName}" HorizontalAlignment="Left" FontSize="16" Margin="5,0" MinWidth="5" TextAlignment="Left"/>
                <TextBlock Text="{Binding Pm2_5}" HorizontalAlignment="Left" FontSize="16" Margin="5,0" />
            </StackPanel>
        </DataTemplate>
    </Page.Resources>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <ListView
                ItemsSource="{x:Bind sites}"
                x:Name="listView"
                HeaderTemplate="{StaticResource SiteListHeaderTemplate}"
                ItemTemplate="{StaticResource SiteListDataTemplate}"
                IsItemClickEnabled="True"
                ItemClick="listView_ItemClick"
                Margin="10,10,10,50"/>
        <Button x:Name="button"  FontFamily="Segoe MDL2 Assets" Content="&#xE895;"  HorizontalAlignment="Left" Margin="16,0,0,7" VerticalAlignment="Bottom" Click="button_Click" Height="32" ToolTipService.ToolTip="更新"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="57,0,0,10" TextWrapping="Wrap" Text="狀態：" FontSize="20" Height="27" VerticalAlignment="Bottom"/>
        <TextBlock x:Name="statusTextBlock" HorizontalAlignment="Left" Margin="117,0,0,5" TextWrapping="Wrap" Text="訊息" FontSize="20" Height="32" VerticalAlignment="Bottom"/>
    </Grid>
</Page>
